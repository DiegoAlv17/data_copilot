# Configuración del Servidor
PORT=3002
NODE_ENV=development

# Base de Datos (PostgreSQL)
# Opción 1: Connection String completa (Recomendado para Supabase/Render)
DATABASE_URL=postgresql://usuario:password@host:port/database?sslmode=require
# Opción 2: URI (Alias)
DATABASE_URI=

# Inteligencia Artificial (Google Gemini)
# Obtén tu API Key en: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=tu_api_key_aqui
GEMINI_API_KEY=tu_api_key_aqui

# LangSmith (Opcional - Para trazas de LangChain)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=tu_langchain_api_key
